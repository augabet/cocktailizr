<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      Il y a <%= pluralize(object.errors.count, "erreur") %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>