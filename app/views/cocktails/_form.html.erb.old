      <%= f.text_field :name, placeholder: "Nom du cocktail..." %>

      <div class="field">
      	<%= f.label :ingredient_ids, "Ingredients" %><br />
      	<%= f.collection_select :ingredient_ids, Ingredient.order(:name), :id, :name, {},
{multiple: true} %>
      </div><br />

      <%= f.text_area :description, placeholder: "DÃ©crivez votre cocktail..."%>

      <%= f.submit "Ajouter ce cocktail", class: "btn btn-large btn-primary" %>
<% end %>