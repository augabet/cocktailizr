<h2>Changer de mot de passe</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, :autofocus => true, class: "input-large", placeholder: "Nouveau mot de passe" %><br />

  <div><%= f.label :password_confirmation, "Confirm new password" %><br />
  <%= f.password_field :password_confirmation, class: "input-large", placeholder: "Confirmation du nouveau mot de passe" %><br />

  <div><%= f.submit "Changer mon mot de passe", class: "btn" %></div>
<% end %>

<%= render "devise/shared/links" %>
