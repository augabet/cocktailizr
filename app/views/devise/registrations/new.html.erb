<h2>Créer un compte</h2>



<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, :autofocus => true, class: "input-large", placeholder: "Email" %> <br />
  <%= f.password_field :password, class: "input-large", placeholder: "Mot de passe" %>  <br />
  <%= f.password_field :password_confirmation, class: "input-large", placeholder: "Confirmation du mot de passe" %>  <br />

  <%= f.submit "Créer un compte",class:"btn" %>
<% end %>



<%= render "devise/shared/links" %>
